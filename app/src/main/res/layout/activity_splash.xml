<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdf8b7"
    tools:context="qualtech_q_smart_home_automation_2018.q_smart.SplashActivity">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splash_image3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q - smart"
        android:layout_below="@id/splash_image"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#fca10e"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by Qualtech"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#000"
        android:padding="20dp"/>

</RelativeLayout>
