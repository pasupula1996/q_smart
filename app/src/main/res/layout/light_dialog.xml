<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/light_dialog_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/light_dialog_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/light_dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#03a9f4"
                    android:gravity="center_horizontal"
                    android:padding="6dp"
                    android:text="Bed Room"
                    android:textColor="#fff"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/light_dialog_layout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/light_dialog_layout1"
                android:background="#7ad3fd"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/light_dialog_imageView_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_lightbulb_off" />

                <TextView
                    android:id="@+id/light_dialog_all_lights_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="All Lights"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/light_dialog_all_lights_txt_click"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/tv_off_rounded"
                    android:gravity="center"
                    android:text="OFF"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:id="@+id/horizontal_line_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/light_dialog_layout2"
                android:background="#fff" />

            <LinearLayout
                android:id="@+id/light_dialog_layout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/horizontal_line_view"
                android:background="#595858"
                android:orientation="horizontal">

