<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#edecec"
    android:layout_gravity="center"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:background="@drawable/common_widget_outline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/widget_light_one"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:src="@drawable/light_off" />
        <ImageView
            android:id="@+id/widget_tv_one"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#b9b5b5"
            android:src="@drawable/tv_one" />
        <ImageView
            android:id="@+id/widget_fan_one"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#b9b5b5"
            android:src="@drawable/fan_black"/>
        <ImageView
            android:id="@+id/widget_light_two"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:src="@drawable/light_off"/>
        <ImageView
            android:id="@+id/close_notification"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:background="#fff"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close_black_24dp"/>

    </LinearLayout>

</LinearLayout>