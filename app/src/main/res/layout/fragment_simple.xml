<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SimpleFragment">

    <TextView
        android:id="@+id/connected_bt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:background="#8BC34A"
        android:paddingRight="4dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="gone"
        android:text="Connected To :"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textStyle="bold" />


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/second_dashboard"
        android:id="@+id/fab_bottom"
        android:visibility="gone"/>


    <ScrollView
        android:id="@+id/scroll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relative_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">


            <LinearLayout
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:clipToPadding="false"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/bed_room_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background"
                            android:padding="10dp"
                            app:srcCompat="@drawable/home" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Home"
                            android:textColor="#000" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/lobby_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/hall_click"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background_hall"
                            android:padding="10dp"
                            app:srcCompat="@drawable/hall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Lobby"
                            android:textColor="#000" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view1"
                android:layout_marginTop="0dp"
                android:background="#fff"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/bed_room_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/bedRoom2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background_bed_room"
                            android:padding="10dp"
                            app:srcCompat="@drawable/bed_room" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Bed Room"
                            android:textColor="#000" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/kitchen_click_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background_kitchen"
                            android:padding="10dp"
                            app:srcCompat="@drawable/kitchen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Kitchen"
                            android:textColor="#000" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view2"
                android:layout_marginTop="0dp"
                android:background="#fff"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/single_menu_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="20dp">

                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background_entertainment"
                            android:padding="10dp"
                            app:srcCompat="@drawable/tv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Single Menu"
                            android:textColor="#000" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardBackgroundColor="#fff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:id="@+id/study_room_click_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_background_study_room"
                            android:padding="10dp"
                            app:srcCompat="@drawable/study2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Study room"
                            android:textColor="#000" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>